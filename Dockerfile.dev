# Development Dockerfile
FROM python:3.11-slim

# Set working directory and Python path
WORKDIR /app
ENV PYTHONPATH=/app \
    TRANSFORMERS_CACHE=/app/.cache \
    HF_HOME=/app/.cache \
    MODE=development

# Install system dependencies + dev tools
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc python3-dev libpq-dev \
    postgresql-client vim curl \
    wget libnss3 libnspr4 libatk1.0-0 \
    libatk-bridge2.0-0 libcups2 libdrm2 \
    libxkbcommon0 libxcomposite1 libxdamage1 \
    libxfixes3 libxrandr2 libgbm1 libpango-1.0-0 \
    libcairo2 libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Create cache directory
RUN mkdir -p /app/.cache && chmod 777 /app/.cache

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Playwright with dev dependencies
RUN playwright install chromium && \
    playwright install --with-deps

# Copy application code (mounted as volume in compose)
COPY . .

EXPOSE 8000
CMD ["uvicorn", "Main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
